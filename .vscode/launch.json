    "version": "0.2.0",
    "configurations": [       
        {
            "name": "Debug: Current File",
            "type": "debugpy",
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "program": "${file}",
            "env": { "PYTHONPATH": "${workspaceRoot}"},
            "console": "integratedTerminal",
            "args": ["-m"],
            "justMyCode": false
        },
        {
            "name": "Python: main",
            "type": "debugpy",
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "env": { "PYTHONPATH": "${workspaceFolder}" },
            "console": "integratedTerminal",
            "justMyCode": false
        }

    ]
}